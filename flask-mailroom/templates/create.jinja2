{% extends 'base.jinja2' %}

{% block subtitle %}Add a Donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if message %}<p>{{ message }}</p>{% endif %}
    <label for="name-input">Donor Name:</label><input id="name-input" type="text" name="donor_name">
    </br>
    <label for="amount-input">Donation Amount:</label><input id="amount-input" type="number" name="donation_amount">
    <input type="submit" value="Create Donation">
</form>
{% endblock content %}
